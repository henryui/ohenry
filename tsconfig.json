{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "target": "es2018",
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
  },
  "include": [
    "api/**/*"
  ],
  "exclude": ["node_modules"]
}
